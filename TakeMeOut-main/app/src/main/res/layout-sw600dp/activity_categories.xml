<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="180dp"
            android:layout_gravity="center">

            <RelativeLayout
                android:id="@+id/food_category"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/foodbackground"
                android:clickable="true"
                android:onClick="openFood">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="25dp"
                    android:text="@string/food"
                    android:textColor="@color/white"
                    android:textSize="60sp" />
            </RelativeLayout>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-10dp"
                android:src="@drawable/burger_pic" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="180dp"
            android:layout_gravity="center">

            <RelativeLayout
                android:id="@+id/taverns"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/drinks_background"
                android:onClick="openDrinks">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="32dp"
                    android:padding="30dp"
                    android:text="@string/drink"
                    android:textColor="@color/white"
                    android:textSize="60sp" />
            </RelativeLayout>


            <ImageView
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/coctail" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="180dp"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/coffee_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="32dp"
                    android:padding="30dp"
                    android:text="@string/coffee"
                    android:textColor="@color/white"
                    android:textSize="60sp" />
            </RelativeLayout>


            <ImageView
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/coffee" />

        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>